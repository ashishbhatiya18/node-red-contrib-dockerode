{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*",
                "src/*"
            ]
        },
        "outDir": "./dist",
        "target": "es5",
        "moduleResolution": "node",
        "strict": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}